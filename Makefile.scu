CFLAGS+=-Wall -I$(SCU_DIR)

.PHONY: test build clean

test: build
	$(SCU_DIR)/testrunner $(TESTCASES)

build: $(TESTCASES)

clean::
	rm -f $(TESTCASES) $(patsubst %,%.o,$(TESTCASES))

$(TESTCASES): %:%.o
	$(CC) -o $@ $< $(SCU_DIR)/scu.c -Wl,$(SCU_DIR)/testcases.lds

%.o: %.c
	$(CC) -c -o $@ $< $(CFLAGS)
